
<div class="container">
    
<div>BIENVENIDOS A MI TIENDA ONLINE {{isLogin}}</div>
{{!-- Mostramos los productos con una cad de bootstrap --}}

<div>
 

<h2>Productos</h2>
<div class="row row-cols-1 row-cols-md-3 g-4">
  
  {{#each products}}
    <div class="card text-bg-dark mb-3" style="max-width: 18rem;">
      <div class="col">
      <img class="w-100 h-50" src={{thumbnail}} class="card-img-top" alt="imagen del producto">
      <h4 class="card-title">{{this.title}}</h4>
      <p class="card-text">{{description}}</p>
      <p class="card-text">{{price}}</p>
      <a href="/product/{{_id}}">
      <button class="btn btn-info"><i class="bi bi-suit-heart-fill"></i>Detalles</button></i>
      </a>
    </div></div>
  {{/each}}
</div>
<div class="container d-flex "> 
  {{! Indicamos que los botones aparezcan mientras prevPage y nextPage no sean null }}
  {{#if prevPage}}
    <a href={{prevLink}}>
      <button class="btn btn-info">Anterior</button>
    </a>
  {{/if}}
  <p class="mx-2 ">Page {{this.page}}</p>
  {{#if nextPage}}
    <a href={{nextLink}}>
      <button class="btn btn-info">Siguiente</button>
    </a>
  {{/if}}
</div></div>